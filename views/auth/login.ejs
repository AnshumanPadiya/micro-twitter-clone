<%- include("../partials/header.ejs") %>
      <link rel="stylesheet" href="/css/login.css">
  </head>
  <body>

  <div class="container logincontainer mt-5">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6 mt-3">
        <h6 class="display-6 text-center">Login</h6>
        
        </div>

        <form action="/login" method="POST">
          <div class="mb-3">

          <div class="mb-3">
            <input type="text" name="username" placeholder="Username" class="form-control"/>
          </div>

          <div class="mb-3">
            <input type="password" name="password" placeholder="Password" class="form-control" autocomplete="on" />
          </div>

          <div class="mb-3">
            <p><a href="/register">Don't have an account? Sign-up here</a></p>
          </div>

          <button class="btn btn-primary">Login</button>
        </form>
      </div>
      <div class="col-lg-3"></div>
    </div>
  </div>


  <%- include("../partials/footer.ejs") %>